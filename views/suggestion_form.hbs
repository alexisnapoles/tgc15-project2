{{#extends 'base'}}
    {{#block 'content'}}
    <div class="container">
        <h1>Suggestion Form</h1>
        <form method = "POST">
            <div>
                <label for="name">Name:</label>
                <input type="text" name="name" id="" class="form-control"/>
            </div>
            <div class="my-1">
                <label for="email">Email:</label>
                <input type="text" name="email" id="" class="form-control"/>
            </div>
            <div>
                <label for="title">Title:</label>
                <input type="text" name="title" id="" class="form-control"/>
            </div>
            <div class="d-flex">
                <label for="category">Category:</label>
                    <div class="form-check mx-3">
                        <input class="form-check-input" type="radio" name="categoryOptions" value="books">
                        <label class="form-check-label" for="books">
                            Books
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="categoryOptions" value="music">
                        <label class="form-check-label" for="music">
                            Music
                        </label>
                    </div>
            </div>
            <input type="submit" value="Submit Suggestion" class="btn btn-success my-3">
        </form>
    </div>
    {{/block}}
{{/extends}}